<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/corners"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/galleryitem_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_person"
            android:layout_margin="7.5dp" />
        <TextView
            android:id="@+id/galleryitem_profile_textview"
            android:text="Имя пользователя"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/galleryitem_explain_textview"
            android:text="Описание к фото"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/galleryitem_imageview_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp">
        <ImageView
            android:id="@+id/galleryitem_favorite_imageview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_favorite_neactive" />
        <ImageView
            android:id="@+id/galleryitem_comment_imageview"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_comment"
            android:paddingLeft="5dp"/>
    </LinearLayout>

    <TextView
    android:id="@+id/galleryitem_favoritecounter_textview"
    android:text="0"
    android:textColor="@android:color/black"
    android:layout_width="wrap_content"
    android:layout_height="27dp"
    android:layout_marginLeft="26dp"/>
</LinearLayout>